h1= "! Battle Sums !"

div#calc_box
  div#left
  div#operation
  div#right
  div#equals =
  input#answer

div.right
div.wrong

script
  var socket = io.connect();
  var first, second, operator, answer;

  function updateContent(){
    $("#left").html(first);
    $("#operation").html(operator);
    $("#right").html(second);
  }

  socket.on('setup', function (data) {
    first = data.first;
    second = data.second;
    operator = data.operator;
    updateContent();
  });

  $('body').keyup(function(e){
    if(e.keyCode == 13){
      if ($("#answer").val() == answer){
        flash("right");
      } else {
        flash("wrong")
      }
    }
  })